{% extends 'base.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
    <h1>Coupon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}ID{% endtrans %}</th>
                <th>{% trans %}Code{% endtrans %}</th>
                <th>{% trans %}Value{% endtrans %}</th>
                <th>{% trans %}Expire at{% endtrans %}</th>
                <th>{% trans %}Is a Fixed Number{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.code }}</td>
                <td>{{ coupon.value }}</td>
                <td>{{ coupon.expireAt ? coupon.expireAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ coupon.isFixedNumber ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('admin_coupon_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('admin_coupon_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_coupon_new') }}">Create new</a>
{% endblock %}
