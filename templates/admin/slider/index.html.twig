{% extends 'base.html.twig' %}

{% block title %}Slider index{% endblock %}

{% block body %}
    <h1>Slider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}ID{% endtrans %}</th>
                <th>{% trans %}Image{% endtrans %}</th>
                <th>{% trans %}Position{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slider in sliders %}
            <tr>
                <td>{{ slider.id }}</td>
                <td><img style="max-width:200px" src="/uploads/{{ slider.image.getFilePath() }}" alt=""></td>
                <td>{{ slider.position }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('admin_slider_show', {'id': slider.id}) }}" class="btn btn-primary btn-sm">{% trans %}Details{% endtrans %}</a>
                        <a href="{{ path('admin_slider_edit', {'id': slider.id}) }}" class="btn btn-warning btn-sm">{% trans %}Edit{% endtrans %}</a>
                        {{ include('admin/slider/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_slider_new') }}">Create new</a>
{% endblock %}
