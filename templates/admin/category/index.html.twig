{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}ID{% endtrans %}</th>
                <th>{% trans %}Name_ar{% endtrans %}</th>
                <th>{% trans %}Name_en{% endtrans %}</th>
                <th>Cat_type</th>
                <th>{% trans %}Position{% endtrans %}</th>
                <th>{% trans %}Image{% endtrans %}</th>
                <th>{% trans %}Created At{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nameAr }}</td>
                <td>{{ category.nameEn }}</td>
                <td>{{ category.catType }}</td>
                <td>{{ category.position }}</td>
                <td><img style="max-width:200px" src="/uploads/{{ category.image.filePath }}" alt=""></td>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-primary btn-sm">{% trans %}Details{% endtrans %}</a>
                        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning btn-sm">{% trans %}Edit{% endtrans %}</a>
                        {{ include('admin/category/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
