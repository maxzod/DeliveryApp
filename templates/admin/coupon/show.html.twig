{% extends 'base.html.twig' %}

{% block title %}Coupon{% endblock %}

{% block body %}
    <h1>Coupon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coupon.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ coupon.code }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ coupon.value }}</td>
            </tr>
            <tr>
                <th>ExpireAt</th>
                <td>{{ coupon.expireAt ? coupon.expireAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ coupon.createdAt ? coupon.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsFixedNumber</th>
                <td>{{ coupon.isFixedNumber ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_coupon_index') }}">back to list</a>

    <a href="{{ path('admin_coupon_edit', {'id': coupon.id}) }}">edit</a>

    {{ include('admin/coupon/_delete_form.html.twig') }}
{% endblock %}
